<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext only for your specific domain -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">tradingai.academytable.ru</domain>
    </domain-config>

    <!-- (Optional) Still block cleartext for all others -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>